<h1>Create an alteration</h1>

<%= form_for @alteration do |f| %>
    <%= f.label "Item" %>
    <%= f.collection_select(:item_type_id, ItemType.all, :id, :name) %>

    <%= f.label "Name of Client" %>
    <%= f.collection_select(:client_id, Client.all, :id, :name)%>

    <%= f.label "Name of Tailor" %>
    <%= f.collection_select(:tailor_id, Tailor.all, :id, :name)%>
    <%= f.submit %>
<% end %>


<%= link_to 'Back', alterations_path %>
