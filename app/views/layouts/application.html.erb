<!DOCTYPE html>
<html>
  <head>
    <title>Sartorial</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <ul class="nav-bar">
     <li><a href="/home">Home</a></li>
     <li><a href="/about">About Us</a></li>
     <li><%= link_to "Tailors", tailors_path %></li>
     <li><%= link_to "Reviews", reviews_path %></li>
      <% if !logged_in? %>
      <td><%= button_to "Sign Up", '/signup', method: :get %></td>
      <td><%= button_to "Login", '/login', method: :get %></td>
      <% end %>
      <% if logged_in? %>
      <td> link_to "My Profile", user_path(@user) </td>  
      <td><%= button_to "Log Out", logout_path, method: 'delete' %></td>
        <% end %>
    </ul>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
